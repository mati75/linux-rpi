+++ b/arch/arm/boot/dts/overlays/audioinjector-addons-overlay.dts
@@ -42,7 +42,7 @@
 
 	fragment@2 {
 		target = <&sound>;
-		__overlay__ {
+		snd: __overlay__ {
 			compatible = "ai,audioinjector-octo-soundcard";
 			mult-gpios = <&gpio 27 0>, <&gpio 22 0>, <&gpio 23 0>,
